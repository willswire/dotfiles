// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "hard_tabs": false,
  "remove_trailing_whitespace_on_save": false,
  "theme": {
    "mode": "system",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Macchiato"
  },
  "assistant": {
    "default_model": {
      "provider": "openai",
      "model": "o1"
    },
    "version": "2"
  },
  "features": {
    "inline_completion_provider": "none"
  },
  "ui_font_size": 14,
  "buffer_font_size": 10.0,
  "lsp": {
    "yaml-language-server": {
      "settings": {
        "yaml": {
          "schemas": {
            "https://raw.githubusercontent.com/zarf-dev/zarf/main/zarf.schema.json": [
              "/*zarf.yaml"
            ],
            "https://raw.githubusercontent.com/defenseunicorns/maru-runner/main/tasks.schema.json": [
              "/*tasks.yaml",
              "/tasks/*.yaml"
            ],
            "https://raw.githubusercontent.com/defenseunicorns/uds-cli/main/uds.schema.json": [
              "/*uds-bundle.yaml"
            ]
          }
        }
      }
    },
    "pyright": {
      "settings": {
        "python": {
          "pythonPath": ".venv/bin/python"
        }
      }
    }
  },
  "calls": {
    "mute_on_join": true
  },
  "file_types": {
    "Helm": [
      "**/templates/**/*.tpl",
      "**/templates/**/*.yaml",
      "**/templates/**/*.yml",
      "**/helmfile.d/**/*.yaml",
      "**/helmfile.d/**/*.yml"
    ],
    "COBOL": ["*.pco"]
  },
  "languages": {
    "SQL": {
      "format_on_save": "off"
    }
  }
}
